<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Domain\Order\Model\Order\Order" schema="public" table="order">
        <id name="id" type="guid">
            <generator strategy="NONE"/>
        </id>

        <field name="internalId" type="string" nullable="false"/>

        <one-to-many field="products" target-entity="Domain\Order\Model\Order\Product" mapped-by="order">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
